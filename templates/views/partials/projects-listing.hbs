{{#ifgt (or data.posts.length data.orderedPosts.length) 0}}
<section id="section-projects-listings">
<!--||||||||||||||||-->
<!--PROJECTS LISTING-->
<!--||||||||||||||||-->

<div class="container-fluid background dark-grey">
	<div class="row">
		<div class="container projects-container">
			<div class="row">
					{{#each data.orderedPosts }}
					<!--ORDERED POST-->
						<a href="{{postUrl slug ../filters.category ../section}}" class="project-link">
							<div class="col-sm-6 {{getColAdvanced @index (addLength ../data.posts ../data.orderedPosts) 0}} project-col">			
								<div class="project-title-container">
									<h3 class="project-title">{{title}}</h3>
								</div>
								{{#if mainImage.exists}}								
									<div class="project-image-container">
										{{#ifCropLeftOvers @index (addLength ../data.posts ../data.orderedPosts) 0}}
											<img class="cld-responsive img-responsive" data-src="{{cloudinaryUrl mainImage width='auto' height=311 q='70' crop='fill' gravity=mainImageCrop}}"/>
										{{else}}
											<img class="cld-responsive img-responsive" data-src="{{cloudinaryUrl mainImage width='auto' q='70'}}"/>
										{{/ifCropLeftOvers}}
									</div>
								{{/if}}
							</div>	
						</a>
					{{/each}}
					{{#each data.posts }}
					<!--NORMAL NOT ORDERED POST-->
						<a href="{{postUrl slug ../filters.category ../section}}" class="project-link">
							<div class="col-sm-6 {{getColAdvanced @index (addLength ../data.posts ../data.orderedPosts) (getLength ../data.orderedPosts)}} project-col">			
								<div class="project-title-container">
									<h3 class="project-title">{{title}}</h3>
								</div>
								{{#if mainImage.exists}}								
									<div class="project-image-container">
										{{#ifCropLeftOvers @index (addLength ../data.posts ../data.orderedPosts) (getLength ../data.orderedPosts)}}
											<img class="cld-responsive img-responsive" data-src="{{cloudinaryUrl mainImage width='auto' height=311 q='70' crop='fill' gravity=mainImageCrop}}"/>
										{{else}}
											<img class="cld-responsive img-responsive" data-src="{{cloudinaryUrl mainImage width='auto' q='70'}}"/>
										{{/ifCropLeftOvers}}
									</div>
								{{/if}}
							</div>	
						</a>
					{{/each}}
			</div>
		</div>
	</div>
</div>
</section>
{{/ifgt}}