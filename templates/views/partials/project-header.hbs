<section id="section-post-header">
{{#if data.post.video}}

<!--||||||||||| -->
<!--VIDEOH BROH -->
<!--||||||||||| -->

	<div class="container-fluid background grey">
		<div class="row">
			<div class="container video-container">
				<div class="row {{getVideoAspectClasses data.post.video data.post.videoAspectRatio}}">
					<div class="col-sm-12 col-md-6 col-lg-4 video-col video-resize">
							<iframe id="euphoric-video" src="{{{getVideoURL data.post.video data.post.videoQuality}}}" width="100%" height="100%" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>
					</div>				
					<div class="col-sm-12 col-md-6 col-lg-8 video-col">
						{{#if data.post.content.brief}}<h3 class="content-brief">{{{data.post.content.brief}}}</h3>{{/if}}						
						{{>visit-website-header}}
						{{#if data.post.mainImage.exists}}						
							{{#ifcontains data.post.videoAspectRatio 'portrait'}}
								<img class="cld-responsive img-responsive" data-src="{{cloudinaryUrl data.post.mainImage width='auto' height='630' q='70' crop='fill' gravity=data.post.mainImageCrop}}"/>
							{{else}}
								{{#ifcontains data.post.video 'youtu'}}
									<img class="cld-responsive img-responsive" data-src="{{cloudinaryUrl data.post.mainImage width='auto' height='164' q='70' crop='fill' gravity=data.post.mainImageCrop}}"/>
								{{else}}
									<img class="cld-responsive img-responsive" data-src="{{cloudinaryUrl data.post.mainImage width='auto' height='195' q='70' crop='fill' gravity=data.post.mainImageCrop}}"/>
								{{/ifcontains}}
							{{/ifcontains}}	
						{{/if}}					
					</div>				
				</div>
			</div>
		</div>
	</div>	
{{else}}
	
{{#or data.post.content.brief (and data.post.mainImage.exists data.post.mainImageShow)}}
	<!--|||||||||||||||||||||||| -->
	<!--PAGE TEXT + IMAGE AT TOP -->
	<!--|||||||||||||||||||||||| -->

	<div class="container-fluid background grey">
		<div class="row">
			<div class="container no-video-container">
				<div class="row">
					<div class="col-sm-12 col-md-12 text-col">
					{{#if data.post.content.brief}}<h3 class="content-brief">{{{data.post.content.brief}}}</h3>{{/if}}
					{{>visit-website-header}}
					{{#and data.post.mainImage.exists data.post.mainImageShow}}<img class="cld-responsive img-responsive" data-src="{{cloudinaryUrl data.post.mainImage width='auto' height='202' q='70' crop='fill' gravity=data.post.mainImageCrop}}"/>{{/and}}					
				</div>
				</div>
			</div>
		</div>
	</div>
	{{/or}}
{{/if}}
{{#or data.post.content.extended data.post.content.more}}
<div class="container-fluid background light-grey">
		<div class="row">
			<div class="container text-container">
				<div class="row">
					{{#and data.post.content.extended data.post.content.more}}
					<div class="col-sm-8 col-md-8 text-col content-extended">
						{{{data.post.content.extended}}}
					</div>
					<div class="col-sm-4 col-md-4 text-col content-more">
						{{{data.post.content.more}}}
						{{>read-more}}
					</div>
					{{else}}
						{{#if data.post.content.extended}}
							<div class="col-sm-12 col-md-12 text-col content-extended">
								{{{data.post.content.extended}}}
							</div>
						{{else}}
							<div class="col-sm-12 col-md-12 text-col content-more">
								{{{data.post.content.more}}}
								{{>read-more}}
							</div>
						{{/if}}
					{{/and}}					
				</div>
			</div>
		</div>
	</div>
{{/or}}
</section>