{{#if data.post.video}}

<!--||||||||||| -->
<!--VIDEOH BROH -->
<!--||||||||||| -->

	<div class="container-fluid background grey">
		<div class="row">
			<div class="container video-container">
				<div class="row">
					<div class="col-sm-12 col-md-4 video-col">
						<iframe id="vimeo-video" src="https://player.vimeo.com/video/{{getVimeoNum data.post.video}}" width="100%" height="100%" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>
					</div>
					<div class="col-sm-12 col-md-8 video-col">
						{{#if data.post.content.brief}}<h3>{{{data.post.content.brief}}}</h3>{{/if}}						
						{{#if data.post.mainImage.exists}}<img class="cld-responsive img-responsive" data-src="{{cloudinaryUrl data.post.mainImage width='auto' height=177 q='70' crop='fill' gravity='center'}}"/>{{/if}}
					</div>					
				</div>
			</div>
		</div>
	</div>	
{{else}}
	{{#if data.post.content.brief}}

	<!--|||||||||||||||||||||||| -->
	<!--PAGE TEXT + IMAGE AT TOP -->
	<!--|||||||||||||||||||||||| -->

	<div class="container-fluid background grey">
		<div class="row">
			<div class="container text-container">
				<div class="row">
					<div class="col-sm-12 col-md-12 text-col">
					<h3>{{{data.post.content.brief}}}</h3>
					{{#if data.post.mainImage.exists}}<img class="cld-responsive img-responsive bro0h" data-src="{{cloudinaryUrl data.post.mainImage width='auto' height=177 q='70' crop='fill' gravity='center'}}"/>{{/if}}
				</div>
				</div>
			</div>
		</div>
	</div>
	{{else}}
		{{#if data.post.mainImage.exists}}

		<!--|||||||||||||||| -->
		<!--PAGE IMAGE ONLY AT TOP -->
		<!--|||||||||||||||| -->
		<div class="container-fluid background grey">
			<div class="row">
				<div class="container text-container">
					<div class="row text-col">				
						<img class="cld-responsive img-responsive" data-src="{{cloudinaryUrl data.post.mainImage width='auto' height=300 q='70' crop='fill' gravity='center'}}"/>
					</div>
				</div>
			</div>
		</div>
		{{/if}}
	{{/if}}
{{/if}}
{{#if data.post.content.extended}}
<div class="container-fluid background light-grey">
		<div class="row">
			<div class="container text-container">
				<div class="row">
					<div class="col-sm-12 col-md-12 text-col">
						{{{data.post.content.extended}}}
					</div>
				</div>
			</div>
		</div>
	</div>
{{/if}}
