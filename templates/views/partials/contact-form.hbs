<!--||||||||||||-->

<div class="container-fluid background dark-grey">
	<div class="row">
		<div class="container projects-container">
			<div class="row">	
				{{#if enquirySubmitted}}
					<h3 class="enquiry-feedback">Thank you for getting in touch, {{printName formData}}.</h3>
				{{else}}
					{{#if enquiryFailed}}
						<h3 class="enquiry-feedback">Something went wrong, email not sent.</h3><br/>Technology, hey? 2 steps forwards, 3 steps backwards.
					{{else}}
						<div class="col-sm-8 col-md-6">
							<form method="post">
								<input type="hidden" name="action" value="contact">
								<div class="form-group {{#if validationErrors.name}}has-error{{/if}}">
									<label>Name:</label>
									<input type="text" name="name.full"  class="form-control" value="{{formData.[name.full]}}">
								</div>
								<div class="form-group {{#if validationErrors.email}}has-error{{/if}}">
									<label>Email Address:</label>
									<input type="email" name="email" class="form-control" value="{{formData.email}}">
								</div>				
								<div class="form-group {{#if validationErrors.message}}has-error{{/if}} ">
									<label>Message:</label>
									<textarea name="message" placeholder="Leave us a message..." rows="4" class="form-control">{{formData.message}}</textarea>
								</div>
								<div class="form-actions">
									<button type="submit" class="btn btn-paragraph">Send</button>
								</div>
							</form>
						</div>
					{{/if}}
				{{/if}}		
			</div>
		</div>
	</div>
</div>
