{{#if data.post.video}}

<!--||||||||||| -->
<!--VIDEOH BROH -->
<!--||||||||||| -->

<div class="container-fluid background grey">
	<div class="row">
		<div class="container video-container">
			<div class="row">
				<div class="col-sm-12 col-md-4 video-col">
					<iframe id="euphoric-video" src="https://player.vimeo.com/video/{{getVimeoNum data.post.video}}" width="100%" height="100%" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>
				</div>
				<div class="col-sm-12 col-md-8 video-col">
					{{#if data.post.content.brief}}<h3>{{{data.post.content.brief}}}</h3>{{/if}}
					{{#if data.post.content.extended}}{{{data.post.content.extended}}}{{/if}}
					{{#if data.post.mainImage.exists}}<img class="cld-responsive img-responsive" data-src="{{cloudinaryUrl data.post.mainImage width='auto' height=150 q='70' crop='fill' gravity='center'}}"/>{{/if}}
				</div>					
			</div>
		</div>
	</div>
</div>

{{else}}
	
<!--|||||||||||||||||||||||| -->
<!--PAGE TEXT + IMAGE AT TOP -->
<!--|||||||||||||||||||||||| -->
{{#or data.post.content.brief (and data.post.mainImage.exists data.post.mainImageShow)}}
<div class="container-fluid background grey">
	<div class="row">
		<div class="container text-container">
			<div class="row">
				<div class="col-sm-12 col-md-12 text-col">
				{{#if data.post.content.brief}}<h3>{{{data.post.content.brief}}}</h3>{{/if}}
				{{#if data.post.content.extended}}{{{data.post.content.extended}}}{{/if}}
				{{#and data.post.mainImage.exists data.post.mainImageShow}}<img class="cld-responsive img-responsive bro0h" data-src="{{cloudinaryUrl data.post.mainImage width='auto' height=202 q='70' crop='fill' gravity='center'}}"/>{{/and}}
				</div>
			</div>
		</div>
	</div>
</div>	
{{/or}}
{{/if}}
