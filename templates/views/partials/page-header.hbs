<section id="section-page-header">
{{#if data.post.video}}

<!--||||||||||| -->
<!--VIDEOH BROH -->
<!--||||||||||| -->

<div class="container-fluid background grey">
	<div class="row">
		<div class="container video-container">
			<div class="row {{getVideoAspectClasses data.post.video data.post.videoAspectRatio}}">					
					<div class="col-sm-12 col-md-6 col-lg-4 video-col video-resize">
						<iframe id="euphoric-video" src="{{{getVideoURL data.post.video data.post.videoQuality}}}" width="100%" height="100%" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>
					</div>				
					<div class="col-sm-12 col-md-6 col-lg-8 video-col">
						{{#if data.post.content.brief}}<h3>{{{data.post.content.brief}}}</h3>{{/if}}
						{{#if data.post.content.extended}}{{{data.post.content.extended}}}{{/if}}						
						{{#if data.post.mainImage.exists}}
							{{#ifcontains data.post.videoAspectRatio 'portrait'}}
								<img class="cld-responsive img-responsive" data-src="{{cloudinaryUrl data.post.mainImage width='auto' height='614' q='70' crop='fill' gravity=data.post.mainImageCrop}}"/>
							{{else}}
								{{#ifcontains data.post.video 'youtu'}}
									<img class="cld-responsive img-responsive" data-src="{{cloudinaryUrl data.post.mainImage width='auto' height='177' q='70' crop='fill' gravity=data.post.mainImageCrop}}"/>
								{{else}}
									<img class="cld-responsive img-responsive" data-src="{{cloudinaryUrl data.post.mainImage width='auto' height='202' q='70' crop='fill' gravity=data.post.mainImageCrop}}"/>
								{{/ifcontains}}
							{{/ifcontains}}	
						{{/if}}
					</div>
				</div>												
			</div>
		</div>
	</div>
</div>
{{else}}	
<!--|||||||||||||||||||||||| -->
<!--PAGE TEXT + IMAGE AT TOP -->
<!--|||||||||||||||||||||||| -->
{{#or data.post.content.brief (and data.post.mainImage.exists data.post.mainImageShow)}}
<div class="container-fluid background grey">
	<div class="row">
		<div class="container text-container">
			<div class="row page-header-row">
				<div class="col-sm-12 col-md-12 text-col">
				{{#if data.post.content.brief}}<h3>{{{data.post.content.brief}}}</h3>{{/if}}
				{{#if data.post.content.extended}}{{{data.post.content.extended}}}{{/if}}
				{{#and data.post.mainImage.exists data.post.mainImageShow}}<img class="cld-responsive img-responsive" data-src="{{cloudinaryUrl data.post.mainImage width='auto' height=202 q='70' crop='fill' gravity='center'}}"/>{{/and}}
				<div class="logo-container">								
					{{>logo-svg}}
				</div>
				</div>				
			</div>
		</div>
	</div>
</div>	
{{/or}}
{{/if}}
</section>