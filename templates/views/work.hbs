{{>page-title}}

{{#ifgt data.post.images.length 0}}

<!--||||||||||||| -->
<!--CAROUSEL BROH -->
<!--||||||||||||| -->

		<div id="carouselbroh" class="carousel slide" data-ride="carousel">
			<ol class="carousel-indicators">
			  	{{#each data.post.images}}
			    <li data-target="#carouselbroh" data-slide-to="{{@index}}" {{#ifeq @index 0}}class="active"{{/ifeq}}></li>
			    {{/each}}
			</ol>
			<div class="carousel-inner">
				{{#each data.post.images}}
				<div class="item carousel-image-container {{#ifeq @index 0}}active{{/ifeq}}">
				  <img class="d-block w-100" src="http://disco90s.com/wp-content/uploads/2015/03/Pat-Sharp.jpg"/>
				</div>
				{{/each}}    
			</div>
			<a class="carousel-control left" href="#carouselbroh" role="button" data-slide="prev">
				<span class="icon-prev" aria-hidden="true"><i class="fa fa-chevron-left"></i></span>
				<span class="sr-only">Previous</span>
			</a>
			<a class="carousel-control right" href="#carouselbroh" role="button" data-slide="next">
				<span class="icon-next" aria-hidden="true"><i class="fa fa-chevron-right"></i></span>
				<span class="sr-only">Next</span>
			</a>
		</div>
{{/ifgt}}

	<!--<img class="d-block w-100 cld-responsive img-responsive" data-src="{{cloudinaryUrl width='auto' q='70'}}"/>-->

{{#if data.post.video}}

<!--||||||||||| -->
<!--VIDEOH BROH -->
<!--||||||||||| -->

	<div class="container-fluid background grey">
		<div class="row">
			<div class="container video-container">
				<div class="row">
					<div class="col-sm-12 col-md-4 video-col">
						<iframe id="vimeo-video" src="https://player.vimeo.com/video/{{getVimeoNum data.post.video}}" width="100%" height="100%" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>
					</div>
					<div class="col-sm-12 col-md-8 video-col">
						{{#if data.post.content.brief}}<h3>{{{data.post.content.brief}}}</h3>{{/if}}
						{{#if data.post.content.extended}}{{{data.post.content.extended}}}{{/if}}
						{{#if data.post.mainImage.exists}}<img class="cld-responsive img-responsive" data-src="{{cloudinaryUrl data.post.mainImage width='auto' height=150 q='70' crop='fill' gravity='center'}}"/>{{/if}}
					</div>					
				</div>
			</div>
		</div>
	</div>	
{{else}}
	{{#if data.post.content.brief}}

	<!--|||||||||||||||||||||||| -->
	<!--PAGE TEXT + IMAGE AT TOP -->
	<!--|||||||||||||||||||||||| -->

	<div class="container-fluid background grey">
		<div class="row">
			<div class="container text-container">
				<div class="row">
					<div class="col-sm-12 col-md-12 text-col">
					<h3>{{{data.post.content.brief}}}</h3>
					{{#if data.post.content.extended}}{{{data.post.content.extended}}}{{/if}}
					{{#if data.post.mainImage.exists}}<img class="cld-responsive img-responsive bro0h" data-src="{{cloudinaryUrl data.post.mainImage width='auto' height=140 q='70' crop='fill' gravity='center'}}"/>{{/if}}
				</div>
				</div>
			</div>
		</div>
	</div>
	{{else}}
		{{#if data.post.mainImage.exists}}

		<!--|||||||||||||||| -->
		<!--PAGE IMAGE ONLY AT TOP -->
		<!--|||||||||||||||| -->
		<div class="container-fluid background grey">
			<div class="row">
				<div class="container text-container">
					<div class="row text-col">				
						<img class="cld-responsive img-responsive" data-src="{{cloudinaryUrl data.post.mainImage width='auto' height=300 q='70' crop='fill' gravity='center'}}"/>
					</div>
				</div>
			</div>
		</div>
		{{/if}}
	{{/if}}
{{/if}}


{{#ifundefined filters.category}}

<!--||||||||||||||| -->
<!--CATEGORIES BROH -->
<!--||||||||||||||| -->

	<div class="container-fluid background dark-grey">
		<div class="row">
			<div class="container projects-container">
				<div class="row">
					{{#each data.categories }}
					<a href="{{categoryUrl key 'work'}}" class="project-link">
					<div class="col-sm-6 col-md-3 category-col">			
							<div class="project-title-container">
								<h3 class="project-title">{{name}}</h3>
							</div>
							{{#each ../data.featuredPosts}}
								{{#ifPostIsInCategory categories ../name}}
									{{#if mainImage.exists}}								
										<div class="project-image-container">
											<img class="cld-responsive img-responsive" data-src="{{cloudinaryUrl mainImage width='auto' q='70'}}"/>
										</div>
									{{/if}}	
								{{/ifPostIsInCategory}}
							{{/each}}
					</div>	
					</a>
					{{/each}}
				</div>
			</div>
		</div>
	</div>
{{else}}

{{#ifgt data.posts.length 0}}

<!--||||||||||||||||-->
<!--PROJECTS LISTING-->
<!--||||||||||||||||-->

<div class="container-fluid background dark-grey">
		<div class="row">
			<div class="container projects-container">
				<div class="row">
					{{#each data.posts }}
					<a href="{{postUrl slug}}" class="project-link">

					<div class="col-sm-6 {{getColFromProjectIndex @index}} project-col">			
							<div class="project-title-container">
								<h3 class="project-title">{{title}}</h3>
							</div>
							{{#if mainImage.exists}}								
							<div class="project-image-container">
								<img class="cld-responsive img-responsive" data-src="{{cloudinaryUrl mainImage width='auto' q='70'}}"/>
							</div>
							{{/if}}
					</div>	
					</a>
					{{/each}}
				</div>
			</div>
		</div>
	</div>
{{/ifgt}}

{{/ifundefined}}

{{#ifgt data.post.otherImages.length 0}}

<!--||||||||||||-->
<!--OTHER IMAGES-->
<!--||||||||||||-->

<div class="container-fluid page-images-container-fluid">
		<div class="row">
			<div class="container page-images-container">
				<div class="row">
					{{#ifeq data.post.otherImages.length 1}}
					<div class="col-sm-12 col-md-12">
						<img class="cld-responsive img-responsive" data-src="{{cloudinaryUrl data.post.otherImages.[0] width='auto' q='70'}}"/>
					</div>
					{{else}}					
						{{#each data.post.otherImages }}
						<div class="col-sm-6 col-md-{{getColFromImagesLength ../data.post.otherImages.length 4}} page-images-col">
							<img class="cld-responsive img-responsive" data-src="{{cloudinaryUrl width='auto' q='70'}}"/>
						</div>	
						{{/each}}
					{{/ifeq}}
				</div>
			</div>
		</div>
</div>
{{/ifgt}}

<!--||||||||||||-->
<!--PARAGRAPHS-->
<!--||||||||||||-->

{{#each data.paragraphs}}
{{#if mainImage.exists}}
<div class="container-fluid paragragh-image-container-fluid">
	<div class="row">		
		<img class="cld-responsive img-responsive" data-src="{{cloudinaryUrl mainImage width='auto' height=300 q='80' crop='fill' gravity='north'}}"/>			
	</div>
</div>
{{/if}}
{{#if content.brief}}
<div class="container-fluid background {{backgroundColor}}">
	<div class="row">
		<div class="container paragraph-container">
			<div class="row paragraph-content-container">
				<h4>{{{content.brief}}}</h4>
				{{#if content.extended}}{{{content.extended}}}{{/if}}
				{{#if link.destination}}
					<a href="{{link.destination}}" target="_blank"><button type="button" class="btn btn-paragraph">{{#if link.text}}{{link.text}}{{else}}Click here{{/if}}</button></a>
				{{/if}}
				{{#ifgt images.length 0}}
					<div class="container">
				<div class="row">
					{{#ifeq images.length 1}}
					<div class="col-sm-12 col-md-12">
						<img class="cld-responsive img-responsive" data-src="{{cloudinaryUrl data.post.otherImages.[0] width='auto' q='70'}}"/>
					</div>
					{{else}}					
						{{#each images}}
						<div class="col-sm-6 col-md-{{getColFromImagesLength ../images.length 2}} paragraph-image-col">
							<img class="cld-responsive img-responsive" data-src="{{cloudinaryUrl width='auto' q='70'}}"/>
						</div>	
						{{/each}}
					{{/ifeq}}
				</div>
			</div>
				{{/ifgt}}
			</div>				
		</div>
	</div>
</div>
{{else}}

<!--||||||||||||||||||||||||||-->
<!--PARAGRAPH WITH IMAGES ONLY-->
<!--||||||||||||||||||||||||||-->
	{{#ifgt images.length 0}}
	<div class="container-fluid background {{backgroundColor}}">
		<div class="row">
			<div class="container paragraph-container">
				<div class="row paragraph-content-container">					
					<div class="container">
						<div class="row">
							{{#ifeq images.length 1}}
							<div class="col-sm-12 col-md-12">
								<img class="cld-responsive img-responsive" data-src="{{cloudinaryUrl data.post.otherImages.[0] width='auto' q='70'}}"/>
							</div>
							{{else}}					
								{{#each images}}
								<div class="col-sm-6 col-md-{{getColFromImagesLength ../images.length 2}} paragraph-image-col">
									<img class="cld-responsive img-responsive" data-src="{{cloudinaryUrl width='auto' q='70'}}"/>
								</div>	
								{{/each}}
							{{/ifeq}}
						</div>
					</div>					
				</div>				
			</div>
		</div>
	</div>
	{{/ifgt}}
{{/if}}
{{/each}}
